                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:text="+20$"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/orderbook_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/ic_glass"
                    app:tint="@color/orderbook_color"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:layout_weight="1"
                android:id="@+id/lots_minus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:textSize="20dp"
                android:text="-" />

            <EditText
                android:id="@+id/lots_edit_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="12312"
                android:textAlignment="center"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/lots_plus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:padding="0dp"
                android:text="+" />

        </LinearLayout>

        <TextView
            android:id="@+id/lots_percent_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textAlignment="center"/>

        <SeekBar
