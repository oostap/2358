                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/percent_minus_button"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textSize="20dp"
                        android:text="-" />

                    <EditText
                        android:id="@+id/percent_limit_edit_text"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:text="113.23"
                        android:textSize="13dp"
                        android:textAlignment="center"/>

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/percent_plus_button"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:padding="0dp"
                        android:text="+" />

                </LinearLayout>

                <Button
                    android:layout_height="60dp"
                    android:id="@+id/sell_limit_button"
                    android:text="@string/sell_limit"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="12dp"
                    android:layout_width="match_parent" />
                <TextView
                    android:id="@+id/profit_limit_absolute_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+1.2% / 10$"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/price_ask_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ñ†ÐµÐ½Ð°: 12.3$"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/profit_ask_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+1.2% / 10$"
                    android:textAlignment="center"/>
                <Button
                    android:layout_height="60dp"
                    android:id="@+id/sell_ask_button"
                    android:text="@string/sell_ask"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="10dp"
                    android:layout_width="wrap_content" />
                <TextView
                    android:id="@+id/profit_ask_absolute_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+1.2% / 10$"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ð¢Ñ€ÐµÐ¹Ð»Ð¸Ð½Ð³ Ñ‚ÐµÐ¹Ðº-Ð¿Ñ€Ð¾Ñ„Ð¸Ñ‚ Ð¸ ÑÑ‚Ð¾Ð¿-Ð»Ð¾ÑÑ"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
