                    <Button
                        android:layout_weight="1"
                        android:id="@+id/tt_activation_minus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textSize="20dp"
                        android:text="-" />

                    <EditText
                        android:id="@+id/tt_activation_edit"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:text="1.0"
                        android:textSize="14dp"
                        android:textAlignment="center"/>

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/tt_activation_plus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:padding="0dp"
                        android:text="+" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tt_activation_price_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123.4$"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ð¾Ñ‚ÐºÐ»Ð¾Ð½ÐµÐ½Ð¸Ðµ"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/tt_delta_minus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textSize="20dp"
                        android:text="-" />

                    <EditText
                        android:id="@+id/tt_delta_edit"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:text="0.4"
                        android:textSize="14dp"
                        android:textAlignment="center"/>

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/tt_delta_plus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:padding="0dp"
                        android:text="+" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tt_delta_price_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123.4$ - 1.3$"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ÑÑ‚Ð¾Ð¿-Ð»Ð¾ÑÑ"
                    android:textAlignment="center"/>
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/tt_stop_loss_minus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textSize="20dp"
                        android:text="-" />

                    <EditText
                        android:id="@+id/tt_stop_loss_edit"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:text="-1.0"
                        android:textSize="14dp"
                        android:textAlignment="center"/>

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/tt_stop_loss_plus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:padding="0dp"
                        android:text="+" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tt_stop_loss_price_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="120.4$"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/sell_tt_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/sell_tt"
            android:textSize="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2" >

        <Button
            android:layout_height="70dp"
            android:id="@+id/update_button"
            android:layout_marginRight="5dp"
            android:text="@string/update"
            android:layout_weight="1"
            android:textSize="14dp"
            android:layout_width="0dp" />

        <Button
            android:id="@+id/cancel_all_button"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="@string/cancel_all2"
            android:textSize="14dp" />
